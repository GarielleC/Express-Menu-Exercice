<article class="plats">
    <h1><strong>Nos Plats :</strong></h1>
    <ul class="platslist">
        <% plats.forEach((plat) => { %>
            <li class="platel">
                <a href="/menu/<%= plat.id %>">
                    <!-- <p><%= plat.nom %> : ..... <%= plat.prix %>€</p> -->
                    <ul class="menu__list">
                        <li class="menu__el"><%= plat.nom %></li>
                        <li class="menu__el"><%= plat.prix %>€</li>
                    </ul>
                    <p>(<%= plat.breveDescription %>)</p>
                </a>
            </li>
        <% }); %>
    </ul>
</article>
